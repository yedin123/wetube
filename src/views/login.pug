extends base

block content
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", type="text", name="username", required=true)
        input(placeholder="Password", type="password", name="password", required=true)
        input(placeholder="submit",type="submit", value="Login")
        include partials/social-login
    div.auth-switch
        span Don't have an account? 
        a(href="/join") Create one now &rarr;